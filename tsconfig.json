{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["esnext"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
		"strict": true
	},
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/__test__"],
  "include": [ "src/**/*.ts" ]
}
